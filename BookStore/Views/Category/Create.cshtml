@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>

        <div asp-validation-summary="ModelOnly"></div>

        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control" type="submit">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-secondary border form-control" asp-controller="Category" asp-action="Index">Back To List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}